	<GameOptions>
		<Row>
			<Type>GAMEOPTION_CULTURALCAPITALS</Type>
			<Description>TXT_KEY_GAME_OPTION_CULTURALCAPITALS</Description>
			<Help>TXT_KEY_GAME_OPTION_CULTURALCAPITALS_HELP</Help>
			<Default>true</Default>
		</Row>
	</GameOptions>
	
  <Defines>
    <Row Name="CC_PROGRESSINCREASE_BASE">
      <Value>20</Value>
    </Row>
    <Row Name="CC_PROGRESSINCREASE_PERELECTION">
      <Value>20</Value>
    </Row>
		<Row Name="CC_PROGRESSINCREASE_EXPONENT">
			<Value>1.20</Value>
		</Row>
		<Row Name="CC_PROGRESSINCREASE_TURNMODIFIER"> <!-- adds n * turnselapsed -->
			<Value>0.15</Value>
		</Row>
    <Row Name="CC_PROGRESS_VISIBLEDIVISOR"> <!-- Points needed for the win will be rounded to this value -->
      <Value>25</Value>
    </Row>
    <Row Name="CC_WONDERSREQUIRED"> <!-- Amount of wonders a player needs to form the cultural committee -->
      <Value>3</Value>
    </Row>
		<Row Name="CC_CITYELECTION_POPMOD"> <!-- Multiplier with average city-Population; the lower the more cities can become eligible as cultural capital; if avg size=4 and the value=0.75 => cities must be >= size 3 -->
			<Value>1.25</Value>
		</Row>
		<Row Name="CC_CITYELECTION_CULTUREMOD"> <!-- Multiplier with average city-Culture -->
			<Value>0.75</Value>
		</Row>
		<Row Name="CC_PROGRESS_WONDERSREQUIRED"> <!-- The player needs this amount of wonders to gain election Points -->
			<Value>0</Value>
		</Row>
    <Row Name="CC_MINORCIV_BONUSPERCENTAGE"> <!-- Bonus culture percentage you get from cultural city states for the race  -->
      <Value>100</Value>
    </Row>
    <Row Name="CC_WONDERS_BONUSPERCENTAGE"> <!-- Bonus percentage you get from world wonders (total culture per turn * (noOfWonders * (value / 100)))  -->
      <Value>5</Value>
    </Row>
		<Row Name="CC_LASTWIN_MALUS"> <!-- Malus you get when you have won the last election  -->
			<Value>80</Value>
		</Row>
		<Row Name="CC_OVERVIEW_PROGRESS_FUZZINESS">
			<!-- Defines in how many segments the progress in the progressview will be devided; must be above 0 -->
			<Value>5</Value>
		</Row>
		<Row Name="CC_USE_COMMITTEESTART">
			<!-- Defines whether or not the election start instantly or with the forming of the committee, giving the committee-building to the instigating player-->
			<Value>1</Value>
		</Row>
		<Row Name="CC_BUILDINGCLASS_COMMITTEE">
			<!-- The building class (and its default building) used when using committeestart -->
			<Value>BUILDINGCLASS_CC_COMMITTEE</Value>
		</Row>
		
		<!-- Bribing -->
		<Row Name="CC_BRIBE_ALLOWED"> <!-- Defines if the players are allowed to bribe the committee for election points -->
			<Value>1</Value>
		</Row>
		<Row Name="CC_BRIBE_BASECOST">
			<Value>60</Value>
		</Row>
		<Row Name="CC_BRIBE_COSTINCREASE_PERBRIBE">
			<Value>90</Value>
		</Row>
		<Row Name="CC_BRIBE_COSTINCREASE_PERERA">
			<Value>60</Value>
		</Row>
		<Row Name="CC_BRIBE_BONUSPERCENTAGE"> <!-- Defines how much will be election points will be additionally gained from bribing-->
			<Value>100</Value>
		</Row>
		<!-- /Bribing -->
		
		<!-- AI Stuff -->
		<Row Name="CC_AI_NEEDS_HAPPINESS_THRESHOLD"> <!-- When the AI's Happiness drops below this value, it will set FLAVOR_HAPPINESS themes on its priority list -->
			<Value>5</Value>
		</Row>
		<Row Name="CC_AI_NEEDS_GOLD_THRESHOLD"> <!-- Scales with GameSpeed; When the AI's Gold drops below this value and has too little income, it will set FLAVOR_GOLD themes on its priority list -->
			<Value>250</Value>
		</Row>
		<Row Name="CC_AI_NEEDS_INCOME_THRESHOLD"><!-- When the AI needs Gold and its Income drops below this value and has a negative income, it will set FLAVOR_GOLD themes on its priority list; -->
			<Value>0</Value>
		</Row>

		<Row Name="CC_AI_BRIBE_MINGOLDNEEDED_MOD"> <!-- The AI needs at least this value times bribe amount to consider bribing -->
			<Value>2.0</Value>
		</Row>
		<Row Name="CC_AI_BRIBE_ALWAYSBRIBE_MOD"> <!-- Player will always bribe if he has more gold than n-times bribecost -->
			<Value>10.0</Value>
		</Row>
		<Row Name="CC_AI_BRIBE_FLAVOR_CULTURE_WEIGHT">
			<Value>4.5</Value>
		</Row>
		<Row Name="CC_AI_BRIBE_FLAVOR_WONDER_WEIGHT">
			<Value>2.5</Value>
		</Row>
		<Row Name="CC_AI_BRIBE_FLAVOR_INFRASTRUCTURE_WEIGHT">
			<Value>1.5</Value>
		</Row>
		<Row Name="CC_AI_BRIBE_FLAVOR_GROWTH_WEIGHT">
			<Value>1.5</Value>
		</Row>
		
