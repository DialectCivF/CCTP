	<Table name="CCSpeedScales">
		<Column name="ID" type="integer" primarykey="true" autoincrement="true"/>
		<Column name="Type" type="text" reference="GameSpeeds(Type)" unique="true"/>
		<Column name="Duration" type="integer" default="10" />
		<Column name="BribeDuration" type="integer" default="10" />
		<Column name="BribeCooldown" type="integer" default="10" />
		<Column name="ThresholdModifier" type="float" default="1.0" /> <!-- Threshold Mod for next election-->
		
		<!-- Bonus Scalers -->
		<Column name="GlobalModifier" type="float" default="1.0" />
	</Table>
	<CCSpeedScales>
		<Row>
			<ID>0</ID>
			<Type>GAMESPEED_MARATHON</Type>
			<Duration>30</Duration>
			<BribeDuration>9</BribeDuration>
			<BribeCooldown>36</BribeCooldown>
			<ThresholdModifier>3.0</ThresholdModifier>
			<GlobalModifier>3.0</GlobalModifier>
		</Row>
		<Row>
			<Type>GAMESPEED_EPIC</Type>
			<Duration>15</Duration>
			<BribeDuration>5</BribeDuration>
			<BribeCooldown>18</BribeCooldown>
			<ThresholdModifier>1.5</ThresholdModifier>
			<GlobalModifier>1.5</GlobalModifier>
		</Row>
		<Row>
			<Type>GAMESPEED_STANDARD</Type>
			<Duration>10</Duration>
			<BribeDuration>3</BribeDuration>
			<BribeCooldown>12</BribeCooldown>
